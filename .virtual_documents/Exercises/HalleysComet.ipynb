from math import hypot, sin, cos, atan2
import numpy as np
from matplotlib import pyplot as plt


# constants
Msun = 2e30 # kg
G    = 6.67428e-11 # m3kg-1s-2
dt   = 1e-3 # s


def acceleration(r:float) -> float:
    return G*Msun/(r**2)
    
def accelx(x:float, y:float) -> float:
    return acceleration(hypot(x,y))*cos(atan2(y,x))
def accely(x:float, y:float) -> float:
    return acceleration(hypot(x,y))*sin(atan2(y,x))
# =========================

def newx(x:float, y:float, vx:float) ->float: 
    ax = accelx(x,y)  
    return x + vx*dt + ax*dt**2/2 # + O(dt**3)

def newy(x:float, y:float, vy:float) ->float: 
    ay = accely(x,y)
    return y + vy*dt + ay*dt**2/2 # + O(dt**3)

# ==========================

def newvx(x:float, y:float, vx:float, vy:float) ->float:
    ax0 = accelx(x,y)
    x1  = newx(x,y,vx)
    y1  = newy(x,y,vy)
    ax1 = accelx(x1,y1)
    return vx + (ax0+ax1)*dt/2

def newvx(x:float, y:float, vx:float, vy:float) ->float:
    ay0 = accely(x,y)
    x1  = newx(x,y,vx)
    y1  = newy(x,y,vy)
    ay1 = accely(x1,y1)
    return vy + (ay0+ay1)*dt/2
    


# settings
t0 = 0
dt = 1e-2
tmax = 10000

r_0_max = 5.28e12 # m
v_0_tangent = 9.13e2 # ms-1

x0=r_0_max
y0=0

# simulation

    # initialization

x=np.array([x0])
y=np.array([y0])
vx=np.array([0])
vy=np.array([v_0_tangent])

    # iteration

for t in np.arange(t0+dt, tmax, dt):
    
    x=np.append(x, newx(x[-1],y[-1],vx[-1]))
    y=np.append(y, newy(x[-1],y[-1],vy[-1]))

    vx=np.append(vx, newvx(x[-1],y[-1],vx[-1], vy[-1]))
    vy=np.append(vy, newvx(x[-1],y[-1],vx[-1], vy[-1]))

r=[hypot(x[i],y[i]) for i in range(len(x))]
vmag=[hypot(vx[i],vy[i]) for i in range(len(vx))]


plt.plot(r)



